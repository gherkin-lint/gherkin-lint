{
  "name": "cucumber-lint-ts",
  "version": "0.0.1",
  "description": "Cucumber features linter written in Typescript",
  "main": "lib/src/index.js",
  "files": [
    "lib"
  ],
  "keywords": [
    "gherkin",
    "cucumber",
    "cucumberjs",
    "validator",
    "feature",
    "features",
    "lint",
    "typescript",
    "linter"
  ],
  "dependencies": {
    "@types/glob": "7.1.4",
    "@types/lodash": "4.14.172",
    "@types/yargs": "17.0.2",
    "chalk": "4.1.2",
    "gherkin": "9.0.0",
    "glob": "7.1.6",
    "lodash": "4.17.21",
    "rimraf": "3.0.2",
    "ts-node": "9.1.1",
    "typescript": "4.3.5",
    "yargs": "17.1.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-typescript": "^7.10.4",
    "@types/chai": "^4.2.12",
    "@types/jest": "^26.0.14",
    "@types/node": "^14.11.1",
    "@types/sinon": "^9.0.5",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "eslint-plugin-import": "2.23.4",
    "chai": "4.2.0",
    "eslint": "^7.9.0",
    "mocha": "7.1.1",
    "mocha-sinon": "2.1.2",
    "mock-fs": "4.11.0",
    "sinon": "9.0.1"
  },
  "bin": {
    "cucumber-lint": "lib/src/index.js"
  },
  "scripts": {
    "clean": "rimraf lib",
    "compile": "tsc --build tsconfig.prod.json",
    "build": "yarn run clean && yarn run compile",
    "lint": "eslint './src/**/*.ts' --fix",
    "test": "mocha -r ts-node/register 'src/__tests__/**/*.ts'",
    "prepare": "yarn lint && yarn test && yarn build",
    "demo": "ts-node ./src/index.ts -c ./demo/configs/.gherkin-lintrc.json ./demo",
    "demo-js": "node ./lib/src/index.js -c demo/configs/.gherkin-lintrc.json demo/**"
  },
  "license": "MIT"
}
