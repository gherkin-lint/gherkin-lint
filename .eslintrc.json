{
  "env": {
    "node": true,
    "mocha": true
  },
  "extends": [
    "eslint:recommended",
    "google"
  ],
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "indent": [
      "error",
      2
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "brace-style": [
      "error",
      "1tbs"
    ],
    "space-before-blocks": [
      "error",
      "always"
    ],
    "require-jsdoc": "off",
    "no-invalid-this": "off",
    "max-len": [
      "error", {
      "ignoreStrings": true,
      "code": 90
    }]
  }
}
